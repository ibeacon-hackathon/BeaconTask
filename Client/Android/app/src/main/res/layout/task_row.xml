<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beacontask.android.TaskRow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Task title"
        android:id="@+id/taskName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:layout_marginRight="15dp"
        android:id="@+id/taskCredits"
        android:textColor="#ff6600"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/coins" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coins"
        android:src="@drawable/credits"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assigned"
        android:src="@drawable/is_assigned"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/taskName"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/taskName"
        android:visibility="gone"/>

</RelativeLayout>
